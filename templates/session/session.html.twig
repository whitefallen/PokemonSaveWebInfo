{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<div>
    <h1>Hello {{ controller_name }}! âœ…</h1>
    <div class="mt-4">
        {{ form_start(form) }}
        <div class="row row-no-gutters">
            <div class="col-md-2">
                {{ form_label(form.session_name) }}
            </div>
            <div class="col">
                {{ form_widget(form.session_name) }}
            </div>
        </div>
        <div class="row">
            <div class="col">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
        {{ form_row(form.uuid) }}
        {{ form_end(form) }}
        <ul class="list-group mt-4">
        {% for session in sessions %}
            <li class="list-group-item"><a href="{{path('app_index_session_detail', {uuid: session.uuid})}}">{{ session.name }}</a></li>
        {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
